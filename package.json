{
  "name": "tugboat-wp",
  "version": "0.1.12",
  "scripts": {
    "start": "npm run build && npm run link && npm run watch",
    "lint": "npx eslint ./src",
    "build": "npx babel src --delete-dir-on-start --out-dir bin",
    "watch": "npx babel src --delete-dir-on-start --out-dir bin --watch",
    "clean": "rm -rf ./bin",
    "link": "npm link",
    "unlink": "npm unlink tugboat-wp",
    "setup": "npm run build && npm run link",
    "release": "npm version patch && npm publish",
    "remove": "npm run unlink && npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Aaron Mazade <ulinaaron@tutamail.com>",
  "license": "ISC",
  "description": "Tugboat WP is a command-line interface (CLI) tool designed to help with the WordPress development process.",
  "keywords": [
    "wordpress",
    "deployment"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^5.1.0",
    "fs": "^0.0.1-security",
    "inquirer": "^8.2.6",
    "lodash": "^4.17.21",
    "path": "^0.12.7",
    "ssh2": "^1.14.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/node": "^7.13.13",
    "@babel/preset-env": "^7.13.15",
    "babel-jest": "^26.6.3",
    "babel-preset-minify": "^0.5.1",
    "eslint": "^8.46.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*"
    ]
  },
  "bin": {
    "tugboat-wp": "./bin/tugboat-wp.js",
    "tugboat-wp-init": "./bin/tugboat-wp-init.js",
    "tugboat-wp-push": "./bin/tugboat-wp-push.js",
    "tugboat-wp-pull": "./bin/tugboat-wp-pull.js",
    "tugboat-wp-test": "./bin/tugboat-wp-test.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "bin/"
  ]
}
